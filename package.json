{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pagerduty",
  "title": "PagerDuty",
  "description": "Quick access for PagerDuty alerts",
  "icon": "logo.png",
  "author": "hmsk",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API key",
      "description": "PagerDuty API key",
      "placeholder": "User Settings > Create API User Token"
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "PagerDuty Dashboard",
      "description": "Template for showing a static list and a detail view",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.0",
    "axios": "^0.27.2",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
